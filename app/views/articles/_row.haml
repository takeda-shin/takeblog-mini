.row
  .col.s12.m6
    .card.orange.darken-3
      .card-content.white-text
        .card-content__upper-info
          %span.card-title 
            = article.title
          %span.user-name
            = article.user_id
          %span.date
            = article.created_at
        .card-content__text
        %p
          = simple_format(article.text)
      .card-action
        %a{:href => "#"} edit
        %a{:href => "#"} destroy 